<section class="relative min-h-[calc(100vh-60px)] flex items-center justify-center pt-[60px]">
  <div class="absolute inset-0 bg-cover bg-center bg-no-repeat will-change-transform" style="background-image: url('{{ section.settings.background_image | img_url: 'master' }}')">
    <div class="absolute inset-0 bg-gradient-to-b from-primary/80 via-primary/85 to-primary"></div>
  </div>

  <div class="container relative px-4 py-12 max-w-[1400px] text-center">
    <div class="flex flex-wrap justify-center gap-2 mb-8">
      {% if section.settings.show_rating_badge %}
        <span class="bg-accent/20 text-white hover:bg-accent/30 text-sm py-1.5 px-3 rounded-full">
          ⭐️ דירוג {{ section.settings.rating }} מתוך 5
        </span>
      {% endif %}
      {% if section.settings.show_certification_badge %}
        <span class="bg-accent/20 text-white hover:bg-accent/30 text-sm py-1.5 px-3 rounded-full">
          🎖️ מאלף מוסמך
        </span>
      {% endif %}
    </div>

    <div class="w-full max-w-[358px] mx-auto md:max-w-2xl">
      <h1 class="text-3xl md:text-5xl font-bold text-white mb-3 md:mb-6 leading-tight tracking-tight">
        {{ section.settings.title }}
        <span class="text-accent mt-2 block text-2xl md:text-3xl">{{ section.settings.subtitle }}</span>
      </h1>

      <p class="text-lg md:text-xl mb-8 text-white/90 leading-relaxed">{{ section.settings.description }}</p>

      <div class="flex flex-col gap-3 max-w-sm mx-auto">
        <a href="https://wa.me/{{ settings.social_whatsapp }}" class="w-full bg-accent hover:bg-accent/90 text-white py-6 text-lg rounded-lg shadow-lg active:scale-[0.98] transition-all flex items-center justify-center gap-2">
          {% render 'icon-whatsapp' %}
          {{ section.settings.cta_primary }}
        </a>

        <a href="#packages" class="w-full border-2 border-accent text-accent hover:bg-accent/10 py-6 text-lg rounded-lg active:scale-[0.98] transition-all">
          {{ section.settings.cta_secondary }}
        </a>
      </div>

      {% if section.settings.show_stats %}
        <div class="grid grid-cols-2 gap-4 mt-12">
          {% for block in section.blocks %}
            {% if block.type == 'stat' %}
              <div class="text-center text-white p-2">
                <div class="text-2xl md:text-3xl font-bold text-accent mb-1">{{ block.settings.number }}</div>
                <div class="text-sm text-white/80">{{ block.settings.label }}</div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "אילוף כלבים מקצועי"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "שיטה ייחודית להצלחה מוכחת"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "מתמחה בפתרון בעיות התנהגות, משמעת מתקדמת ובניית קשר חזק בין הכלב לבעליו"
    },
    {
      "type": "text",
      "id": "cta_primary",
      "label": "Primary CTA Text",
      "default": "שיחת ייעוץ בוואטסאפ"
    },
    {
      "type": "text",
      "id": "cta_secondary",
      "label": "Secondary CTA Text",
      "default": "לחבילות האימון"
    },
    {
      "type": "checkbox",
      "id": "show_rating_badge",
      "label": "Show Rating Badge",
      "default": true
    },
    {
      "type": "text",
      "id": "rating",
      "label": "Rating",
      "default": "4.9"
    },
    {
      "type": "checkbox",
      "id": "show_certification_badge",
      "label": "Show Certification Badge",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_stats",
      "label": "Show Statistics",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "stat",
      "name": "Statistic",
      "settings": [
        {
          "type": "text",
          "id": "number",
          "label": "Number",
          "default": "50+"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "כלבים מאומנים"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Section",
      "blocks": [
        {
          "type": "stat"
        },
        {
          "type": "stat"
        }
      ]
    }
  ]
}
{% endschema %}